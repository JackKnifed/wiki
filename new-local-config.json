{
	"Port": "8080",
	"Hostname": "localhost",
	"TemplateDir": "templates/*",
	"Redirects": [
		{
			"Requested": "/favicon.ico",
			"Target": "/site/favicon.ico",
			"Code": 302
		},
		{
			"Requested": "/rawindex",
			"Target": "/",
			"Code": 307
		},
		{
			"Requested": "/topic/none/",
			"Target": "/",
			"Code": 307
		}
	],
	"Indexes": [
		{
			"WatchDirs": {
				"pages": "/"
			},
			"WatchExtension": ".md",
			"IndexPath": "wiki.index",
			"IndexType": "en",
			"IndexName": "wiki",
			"Restricted": [
				"internal",
				"handbook"
			],
			"Handlers": [
				{
					"Path": "pages",
					"Prefix": "/",
					"Default": "readme",
					"ServerType": "markdown",
					"Template": "wiki.html",
					"Restricted": [
						"internal",
						"handbook"
					]
				},
				{
					"Path": "static",
					"Prefix": "/static/",
					"Default": "",
					"ServerType": "raw",
					"Restricted": [
						"ini",
						"json"
					]
				},
				{
					"Path": "pages",
					"Prefix": "/raw/",
					"Default": "readme",
					"ServerType": "raw",
					"Restricted": [
						"md",
						"ini",
						"json"
					]
				},
				{
					"ServerType": "fuzzy",
					"Path": "wiki.index",
					"Prefix": "/search/",
					"Default": "wiki",
					"Template": "search.html",
					"FallbackTemplate": "search.html"
				},
				{
					"ServerType": "field",
					"Prefix": "/topic/",
					"Path": "wiki.index",
					"Default": "topic",
					"Template": "topicList.html",
					"FallbackTemplate": "topicList.html"
				},
				{
					"ServerType": "field",
					"Prefix": "/author/",
					"Path": "wiki.index",
					"Default": "author",
					"Template": "authorList.html",
					"FallbackTemplate": "authorList.html"
				}
			]
		}
	]
}